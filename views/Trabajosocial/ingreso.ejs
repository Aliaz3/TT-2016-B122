	<form role="form" action="/Trabajosocial/guardarnino" method="POST">
    <div class="row setup-content" id="step-1">
      <div class="col-xs-6 col-md-offset-3">
        <div class="col-md-12">
          <h3>Datos del niño(a)</h3>
          <div class="form-group col-xs-12" align="center">
              <label for="fecha" id="foto" class="control-label">Fotografía del niño:</label>
              <img id="image" width="140" height="140" />
              <div class="cols-sm-10">
                <div class="input-group">
                <input type="file" name="imagennino" id="upload" value="Fotografía del niño">
                <script>
                  document.getElementById("upload").onchange = function() {
                  var reader = new FileReader(); //instanciamos el objeto de la api FileReader
                  reader.onload = function(e) {
                  //en el evento onload del FileReader, asignamos el path a el src del elemento imagen de html
                  document.getElementById("image").src = e.target.result;
                  document.getElementById("foto").innerHTML = "";
                  };
                  // read the image file as a data URL.
                  reader.readAsDataURL(this.files[0]);
                  };
                </script>
                </div>
              </div>
            </div>
           <div class="form-group col-xs-4">
            <label class="cols-sm-2 control-label">Nombre:</label>
            <div class="cols-sm-10">
              <div class="input-group">
                <span class="input-group-addon"><i class="fa fa-child" aria-hidden="true"></i></span>
                <input  maxlength="100" type="text" id="nnombre" name="nnombre" required="required" class="form-control" placeholder="Ingrese el nombre del niño(a)" minlength="2" maxlength="50" />
              </div>
            </div>
          </div>
          <div class="form-group col-xs-4">
            <label class="cols-sm-2 control-label">Apellido Paterno:</label>
            <div class="cols-sm-10">
              <div class="input-group">
                <span class="input-group-addon"><i class="fa fa-child" aria-hidden="true"></i></span>
                <input  maxlength="100" type="text" id="napepaterno" name="napepaterno" required="required" class="form-control" placeholder="Ingrese Apellido Paterno" minlength="2" maxlength="50" />
              </div>
            </div>
          </div>
          <div class="form-group col-xs-4">
            <label class="cols-sm-2 control-label">Apellido Materno:</label>
            <div class="cols-sm-10">
              <div class="input-group">
                <span class="input-group-addon"><i class="fa fa-child" aria-hidden="true"></i></span>
                <input  maxlength="100" type="text" id="napematerno" name="napematerno" required="required" class="form-control" placeholder="Ingrese Apellido Materno" minlength="2" maxlength="50" />
              </div>
            </div>
          </div>
            <div class="form-group col-xs-4">
              <label for="fecha" class="cols-sm-2 control-label">Fecha de nacimiento:</label>
              <div class="cols-sm-10">
                <div class="input-group">
                  <span class="input-group-addon"><i class="fa fa-calendar-minus-o" aria-hidden="true"></i></span>
                  <input type="date" class="form-control" name="nfnacimiento" id="nfnacimiento" required="required" pattern="[0-9]{2}/[0-9]{2}/[0-9]{4}" min="2010-01-01"  placeholder="dd/mm/aaaa"/>
                </div>
              </div>
            </div>
          <div class="form-group col-xs-4">
            <label class="cols-sm-2 control-label">Grupo a cursar:</label>
            <div class="cols-sm-10">
              <div class="input-group">
                <span class="input-group-addon"><i class="fa fa-users" aria-hidden="true"></i></span>
                <select class="form-control" id="ngrupoacursar" name="ngrupoacursar">
                  <option value="default" selected disabled hidden>--Seleccione--</option>
                  <option value="Lactantes I">Lactantes I</option>
                  <option value="Lactantes II">Lactantes II</option>
                  <option value="Lactantes III">Lactantes III</option>
				  <option value="Maternal I">Maternal I</option>
                  <option value="Maternal II">Maternal II</option>
                  <option value="Maternal III">Maternal III</option>
				  <option value="Preescolar I">Preescolar I</option>
                  <option value="Preescolar II">Preescolar II</option>
                  <option value="Preescolar III">Preescolar III</option>
                </select>
              </div>
            </div>
          </div>
          <div class="form-group col-xs-4">
            <label class="cols-sm-2 control-label">Lugar entre hermanos</label>
            <div class="cols-sm-10">
              <div class="input-group">
                <span class="input-group-addon"><i class="fa fa-user-circle" aria-hidden="true"></i></span>
                <select class="form-control" name="nlugarhermanos">
                  <option value="default" selected disabled hidden>--Seleccione--</option>
                  <option value="1">Primero</option>
                  <option value="2">Segundo</option>
                  <option value="3">Tercero</option>
                  <option value="4">Cuarto</option>
                  <option value="5">Quinto</option> 
                  <option value="6">Sexto</option>
                  <option value="7">Septimo</option>
                </select>
              </div>
            </div>
          </div>
		  <div class="form-group col-xs-4">
		  <label class="cols-sm-2 control-label">Grupo Sanguineo</label>
		  <div class="cols-sm-10">
              <div class="input-group">
                <span class="input-group-addon"><i class="fa fa-rebel" aria-hidden="true"></i></span>
                <select class="form-control" name="ngruposanguineo">
                  <option value="default" selected disabled hidden>--Seleccione--</option>
                  <option value="A">A</option>
                  <option value="B">B</option>
                  <option value="O">O</option>
                  <option value="AB">AB</option>
                </select>
              </div>
			</div>
		  </div>
		  <div class="form-group col-xs-4">
		  <label class="cols-sm-2 control-label">RH</label>
		  <div class="cols-sm-10">
              <div class="input-group">
                <span class="input-group-addon"><i class="fa fa-rebel" aria-hidden="true"></i></span>
                <select class="form-control" name="nrh">
                  <option value="default" selected disabled hidden>--Seleccione--</option>
                  <option value="Positivo">Positivo</option>
                  <option value="Negativo">Negativo</option>
                </select>
              </div>
			</div>
		  </div>
		  <div class="form-group col-xs-4">
            <label class="cols-sm-2 control-label">C.U.R.P.:</label>
            <div class="cols-sm-10">
              <div class="input-group">
                <span class="input-group-addon"><i class="fa fa-child" aria-hidden="true"></i></span>
                <input  maxlength="100" type="text" id="ncurp" name="ncurp" required="required" class="form-control" placeholder="Ingrese el C.U.R.P. del niño(a)" minlength="2" maxlength="50" />
              </div>
            </div>
          </div>
          <button class="btn btn-primary nextBtn btn-lg pull-right" type="button" >Siguiente</button>
        </div>
      </div>
    </div>
