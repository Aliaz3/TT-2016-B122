<div class="container">
	<h2>Trabajadores</h2>
	<table class="table table-hover">
		<th>Usuario</th>
		<th>Nombre</th>
		<th colspan="2" class="text-center">Acciones</th>
		<%_.each(Trabajadors,function(Trabajador) { %>
		<tr>
			<td><%=Trabajador.Usuario%></td>
			<td><%=Trabajador.Nombre%></td>
			<td>
				<a href="/trabajador/show/<%=Trabajador.id%>" class="btn btn-success btn-sm">Ver Detalles</a>
			</td>
			<td>
				<form action="/trabajador/destroy/<%= Trabajador.id %>" method="POST" acccept-charset="utf-8">
					<input type="hidden" name="_method" value="delete"/>
					<input type="submit" class="btn btn-sm btn-danger" value="Eliminar"/>
					<input type="hidden" name="_csrf" value="<%=_csrf %>"/>
				</form>
			</td>
	    </tr>
		<%})%>
	</table>
</div>