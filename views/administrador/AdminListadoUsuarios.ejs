        </nav>

        <main class="col-sm-9 ml-sm-auto col-md-10 pt-3" role="main">
          <h2>Listado de Usuarios</h2>

          <div class="table-responsive">
            <table class="table table-striped table-bordered">
              <thead>
                       <tr>
                          <th rowspan="2" class="hidden-xs">ID</th>
                          <th rowspan="2">Tipo</th>
						  <th rowspan="2">Usuario</th>
                          <th rowspan="2">Nombre</th>
                          <th rowspan="2">Apellido Materno</th>
                          <th rowspan="2">Apellido Paterno</th>
                        </tr>
                      </thead>
                      <tbody>
					  <% _.each(users, function(user) { %>
						<tr data-id="<%= user.id %>" data-model="administrador">
						  <td><%= user.id %></td>
						  <td><%= user.tipo %></td>
						  <td><%= user.nombre %></td>
						  <td><%= user.apellidoM %></td>
						  <td><%= user.apellidoP %></td>
						  <td><%= user.usuario %></td>
						  <td><a href="/administrador/show/<%= user.id %>" class="btn btn-sm btn-primary">Ver</a></td>
						</tr>
						<% }) %>
                      </tbody>
            </table>
          </div>

        </main>
      </div>
    </div>
