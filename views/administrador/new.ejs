<div class="container-fluid">
      <div class="row">
        <nav class="col-sm-3 col-md-2 d-none d-sm-block bg-light sidebar">
          <ul class="nav nav-pills nav-stacked">
          <li class="active"><a href="#">Bienvenido @Administrador</a></li>
          <li class="dropdown">
            <a class="dropdown-toggle" data-toggle="dropdown" href="#">Gestionar Usuarios<span class="caret"></span></a>
            <ul class="dropdown-menu">
              <li><a href="/administrador/new">Registrar Usuario</a></li>
              <li><a href="/AdmiUsers">Ver usuarios</a></li>
            </ul>
          </li>
          <li class="dropdown">
            <a class="dropdown-toggle" data-toggle="dropdown" href="#">Reportes<span class="caret"></span></a>
            <ul class="dropdown-menu">
              <li><a href="#">Reportes mensuales</a></li>
              <li><a href="/AdminGraficas">Ver gráficas</a></li>
            </ul>
          </li>
          <li class="dropdown">
            <a class="dropdown-toggle" data-toggle="dropdown" href="#">Gestionar Archivos<span class="caret"></span></a>
            <ul class="dropdown-menu">
              <li><a href="#">Recomendaciones</a></li>
              <li><a href="#">Tareas</a></li>
            </ul>
          </li>
          </ul>
        </nav>
        <main class="col-sm-9 ml-sm-auto col-md-10 pt-3" role="main">
          <h2>Registrar nuevo usuario</h2>

          <section class="row text-center placeholders">
            <form action="/administrador/create" method ="POST" class="form-signin col-sm-6">
				<% if(flash && flash.err) { %>
					<ul class="alert alert-success">
				<% Object.keys(flash.err).forEach(function(error) { %>
					<li><%- JSON.stringify(flash.err[error]) %></li>
				<% }) %>
				</ul>
				<% } %>
				<div class="control-group">
				<input type="text" class="form-control" placeholder="Tipo Usuario" name="tipo" id="tipo">
				</div>
				<br/>
				<div class="control-group">
				<input type="text" class="form-control" placeholder="Tu nombre" name="nombre" id="nombre">
				</div>
				<br/>
				<div class="control-group">
				<input type="text" class="form-control" placeholder="Apellido paterno" name="apellidoP">
				</div>
				<br/>
				<div class="control-group">
				<input type="text" class="form-control" placeholder="Apellido materno" name="apellidoM">
				</div>
				<br/>
				<div class="control-group">
				<input type="text" class="form-control" placeholder="Usuario" name="usuario" id="usuario">
				</div>
				<br/>
				<div class="control-group">
				<input type="password" class="form-control" placeholder="Contraseña" name="contrasena" id="contrasena" >
				</div>
				<br/>
				<div class="control-group">
				<input type="password" class="form-control" placeholder="Confirmar Contraseña" name="confirmacion" id="confirmacion">
				</div>
				<br/>
				<button type="submit" class="btn btn-primary btn-block">Crear Usuario</button>
				<br/>
				<input type="hidden" name="_csrf" value="<%= _csrf %>" />
				
				</form>
          </section>

        </main>
      </div>
    </div>